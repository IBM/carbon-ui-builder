{
	"name": "workspace",
	"$schema": "node_modules/nx/schemas/project-schema.json",
	"targets": {
		"version": {
			"executor": "@jscutlery/semver:version",
			"options": {
				"syncVersions": true,
				"preset": "conventionalcommits",
				"postTargets": ["github"],
				"tagPrefix": "v",
				"remote": "origin",
				"baseBranch": "main",
				"skipCommit": true,
				"skipProjectChangelog": true,
				"push": true,
				"skipCommitTypes": [
					"chore",
					"ci",
					"docs",
					""
				]
			}
		},
		"github": {
			"executor": "@jscutlery/semver:github",
			"options": {
				"tag": "${tag}",
				"notes": "${notes}"
			}
		}
	}
}
